# =============================================================================
# MINDFRAME ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
APP_NAME="Mindframe"
API_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://mindframe_user:your_password@localhost:5432/mindframe"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
SECRET_KEY="your-super-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True

# -----------------------------------------------------------------------------
# STRIPE (Payment Processing)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_PRO="price_pro_monthly"
STRIPE_PRICE_ID_ENTERPRISE="price_enterprise_monthly"

# -----------------------------------------------------------------------------
# SENDGRID (Email)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="hello@mindframe.ai"
SENDGRID_FROM_NAME="Mindframe"

# Email Templates
SENDGRID_TEMPLATE_WELCOME="d-welcome_template_id"
SENDGRID_TEMPLATE_VERIFICATION="d-verification_template_id"
SENDGRID_TEMPLATE_PASSWORD_RESET="d-reset_template_id"

# -----------------------------------------------------------------------------
# OPENAI (AI)
# -----------------------------------------------------------------------------
OPENAI_API_KEY="sk-your_openai_api_key"
OPENAI_MODEL="raptor-mini-preview"
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# ANTHROPIC (Alternative AI)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY="sk-your_anthropic_api_key"

# -----------------------------------------------------------------------------
# TWILIO (Voice AI)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# -----------------------------------------------------------------------------
# REDIS (Caching & Task Queue)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS=50

# -----------------------------------------------------------------------------
# CELERY (Background Jobs)
# -----------------------------------------------------------------------------
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# -----------------------------------------------------------------------------
# SENTRY (Error Tracking)
# -----------------------------------------------------------------------------
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"
SENTRY_ENVIRONMENT="development"
SENTRY_TRACES_SAMPLE_RATE=1.0

# -----------------------------------------------------------------------------
# AWS (Optional - for S3, SES, etc)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="eu-north-1"
AWS_S3_BUCKET="mindframe-uploads"

# -----------------------------------------------------------------------------
# GOOGLE CLOUD (Optional)
# -----------------------------------------------------------------------------
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"
GOOGLE_CLOUD_PROJECT="your-project-id"

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS="http://localhost:3000,https://mindframe.ai,https://www.mindframe.ai"

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_API_CALLS=1000

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json, text
LOG_FILE="logs/mindframe.log"

# -----------------------------------------------------------------------------
# MONITORING
# -----------------------------------------------------------------------------
ENABLE_METRICS=True
METRICS_PORT=9090
ENABLE_TRACING=False

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_META_AI_GUARDIAN=True
ENABLE_VOICE_AI=True
ENABLE_MARKETPLACE=True
ENABLE_ACADEMY=True
ENABLE_ANALYTICS=True

# -----------------------------------------------------------------------------
# INTEGRATIONS
# -----------------------------------------------------------------------------
# Slack
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_SIGNING_SECRET="your-slack-signing-secret"

# HubSpot
HUBSPOT_API_KEY="your-hubspot-api-key"

# Salesforce
SALESFORCE_CLIENT_ID="your-salesforce-client-id"
SALESFORCE_CLIENT_SECRET="your-salesforce-client-secret"

# Google Analytics
GA_TRACKING_ID="UA-XXXXX-Y"
GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# -----------------------------------------------------------------------------
# PRODUCTION SETTINGS (Only for Production)
# -----------------------------------------------------------------------------
# Uncomment and configure when deploying to production

# SSL/TLS
# SSL_CERT_PATH="/path/to/ssl/cert.pem"
# SSL_KEY_PATH="/path/to/ssl/key.pem"

# CDN
# CDN_URL="https://cdn.mindframe.ai"

# Domain
# DOMAIN="mindframe.ai"
# SUBDOMAIN_API="api"
# SUBDOMAIN_APP="app"

# Backup
# BACKUP_S3_BUCKET="mindframe-backups"
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# -----------------------------------------------------------------------------
# DEVELOPMENT ONLY
# -----------------------------------------------------------------------------
# These should be False in production
ENABLE_DEBUG_TOOLBAR=True
ENABLE_SQL_LOGGING=True
RELOAD_ON_CHANGE=True

# -----------------------------------------------------------------------------
# TESTING
# -----------------------------------------------------------------------------
# TEST_DATABASE_URL="postgresql://test_user:test_pass@localhost:5432/mindframe_test"
# PYTEST_WORKERS=4

# =============================================================================
# NOTES:
# - Never commit .env file to git (add to .gitignore)
# - Use strong, unique passwords in production
# - Rotate secrets regularly
# - Use environment-specific values
# - Keep production secrets in secure vault (AWS Secrets Manager, etc)
# =============================================================================
