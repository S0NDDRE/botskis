# Mindframe Frontend Environment Variables
# Copy this file to .env.local for local development
# Copy this file to .env.production for production builds

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL
# Development: http://localhost:8000/api/v1
# Production: https://api.mindframe.ai/api/v1
VITE_API_BASE_URL=http://localhost:8000/api/v1

# WebSocket URL
# Development: ws://localhost:8000/ws
# Production: wss://api.mindframe.ai/ws
VITE_WS_URL=ws://localhost:8000/ws

# =============================================================================
# APPLICATION
# =============================================================================

# Application Name
VITE_APP_NAME=Mindframe

# Environment (development, staging, production)
VITE_APP_ENV=development

# Enable debug mode
VITE_DEBUG=true

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Sentry (Error Tracking)
VITE_SENTRY_DSN=

# Google Analytics
VITE_GA_TRACKING_ID=

# Stripe (Publishable Key)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Meta-AI Guardian
VITE_ENABLE_GUARDIAN=true

# Enable Voice AI
VITE_ENABLE_VOICE=true

# Enable Marketplace
VITE_ENABLE_MARKETPLACE=true

# Enable Academy
VITE_ENABLE_ACADEMY=true

# =============================================================================
# NOTES
# =============================================================================
# - All environment variables must start with VITE_ to be accessible in the app
# - Never commit .env.local or .env.production to git
# - Use .env.example as a template for other environments
# - Restart dev server after changing environment variables
